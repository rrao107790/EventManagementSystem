@model EventManagementSystem.ViewModels.CommentViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.TextAreaFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="submit" name="name" value="Submit" class="btn btn-default submit" />
    </div>
}

<script>
   
        $(".submit").on('click', function () {
            $.ajax({
                url: '@Url.Action("SubmitComment","Events")',
                contentType: "application/json",
                type: 'POST'
            })
        })
   
</script>