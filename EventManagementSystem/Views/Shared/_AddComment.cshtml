@model EventManagementSystem.ViewModels.CommentViewModel
@*@{Model.EventId = ViewBag.id}*@

<div class="form-group">
    @using (Html.BeginForm("SubmitComment", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-lg-12">
                @Html.TextAreaFor(model => model.Text, new { @class = "form-control" })
            </div>
        </div>
        @Html.HiddenFor(model => model.EventId)

        <div class="form-group">
            <input type="submit" name="name" value="Submit" class="btn btn-default submit" />
        </div>
    }
</div>